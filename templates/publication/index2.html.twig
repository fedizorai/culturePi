{% extends './dashboard/base.html.twig' %}

{% block title %}CategorieEvent index{% endblock %}

{% block body %}
  
<div class="col-lg-8 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">
            <h5 class="card-title fw-bold mb-4 text-center">Les Publications</h5>
            <h5 class="card-title fw-bold mb-4 text-center">Les Publications</h5>

           
            <div>
                <table class="table table-striped table-hover">
                    <thead class="bg-primary text-light">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Contenu Publication</th>
                            <th scope="col">User Name</th>
                            <th scope="col">User ID</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                          {% for p_u_b_l_i_c_a_t_i_o_n in p_u_b_l_i_c_a_t_i_o_ns %}
                <tr>
                    <td>{{ p_u_b_l_i_c_a_t_i_o_n.id }}</td>
                    <td>{{ p_u_b_l_i_c_a_t_i_o_n.CONTENUPUB }}</td>
                    <td>{{ p_u_b_l_i_c_a_t_i_o_n.DATEPUB ? p_u_b_l_i_c_a_t_i_o_n.DATEPUB|date('Y-m-d') : '' }}</td>
                    <td>{{ p_u_b_l_i_c_a_t_i_o_n.USERNAME }}</td>
                    <td>{{ p_u_b_l_i_c_a_t_i_o_n.USERID }}</td>
                    <td> {{ include('publication/deleteback.html.twig') }}</td>
                </tr>
                    {% else %}
                   <tr>
                          <td colspan="6">No records found</td>
                         </tr>
                  {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
