{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
   <div style="text-align: center; margin-bottom: 40px;">
    <h1 style="display: inline-block; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
        <i class="fa fa-map"></i> Evenement Details
    </h1>
</div>


<div>


    <table class="container">
    
        <tbody>
            <tr>
                <th>NomEvent</th>
                <td>{{ evenement.nomEvent }}</td>
            </tr>
            <tr>
                <th>MaxPlacesEvent</th>
                <td>{{ evenement.maxPlacesEvent }}</td>
            </tr>
            <tr>
                <th>DateEvent</th>
                <td>{{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LieuEvent</th>
                <td>{{ evenement.lieuEvent }}</td>
            </tr>
        </tbody>
    </table>
    
</div>
<div style="text-align: center;">
    <div class="border-button" style="display: inline-block;">
        <a href="{{ path('app_evenement_index') }}">Back to List</a>
    </div>

    <div class="border-button" style="display: inline-block;">
        <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">Edit</a>
    </div>
</div>

   {{ include('evenement/_delete_form.html.twig') }}

{% endblock %}



