                        <li><a href="#">Hebergement</a></li>
                        <li><a href="#">Review</a></li>
                        <li><a href="#">Login</a></li>
                    </ul>   
    
{% endblock %}

{% block body %}

  <div class="search-form">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <form id="search-form" name="gs" method="submit" role="search" action="#">
            <div class="row">
              <div class="col-lg-2">
                <h4>Sort Deals By:</h4>
              </div>
              <div class="col-lg-4">
                  <fieldset>
                      <select name="Location" class="form-select" aria-label="Default select example" id="chooseLocation" onChange="this.form.click()">
                          <option selected>Destinations</option>
                          <option type="checkbox" name="option1" value="Italy">Italy</option>
                          <option value="France">France</option>
                          <option value="Switzerland">Switzerland</option>
                          <option value="Thailand">Thailand</option>
                          <option value="Australia">Australia</option>
                          <option value="India">India</option>
                          <option value="Indonesia">Indonesia</option>
                          <option value="Malaysia">Malaysia</option>
                          <option value="Singapore">Singapore</option>
                      </select>
                  </fieldset>
              </div>
              <div class="col-lg-4">
                  <fieldset>
                      <select name="Price" class="form-select" aria-label="Default select example" id="choosePrice" onChange="this.form.click()">
                          <option selected>Price Range</option>
                          <option value="100">$100 - $250</option>
                          <option value="250">$250 - $500</option>
                          <option value="500">$500 - $1,000</option>
                          <option value="1000">$1,000 - $2,500</option>
                          <option value="2500+">$2,500+</option>
                      </select>
                  </fieldset>
              </div>
              <div class="col-lg-2">                        
                  <fieldset>
                      <button class="border-button">Search Results</button>
                  </fieldset>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>


    <div class="amazing-deals">
        <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
            <div class="section-heading text-center">
                <h2>Best Weekly Offers In Each City</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore.</p>
            </div>
            </div>

{% for evenement in evenements %}
            <div class="col-lg-6 col-sm-6">
            <div class="item">
                <div class="row">
                <div class="col-lg-6">
                    <div class="image">
                    <img src="{{asset('assets/images/deals-01.jpg')}}" alt="">
                    </div>
                </div>
                <div class="col-lg-6 align-self-center">
                    <div class="content">
                    <span class="info"> {{ evenement.categorie }}</span>
                    <h4>{{ evenement.nomEvent }}</h4>
                    <div class="row">
                        <div class="col-6">
                        <i class="fa fa-clock"></i>
                        <span class="list">{{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d H:i:s') : '' }}</span>
                        </div>
                        <div class="col-6">
                        <i class="fa fa-map"></i>
                        <span class="list">{{ evenement.maxPlacesEvent }}</span>
                        </div>
                    </div>
                    <p>{{ evenement.lieuEvent }}</p>
                    <div class="main-button">
                        <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}">Show Evenement</a>
                    </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
              {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}



        </div>
    </div>
    </div>
    <div class="border-button"><a href="{{ path('app_evenement_new') }}">Ajouter un evenemnt</a></div>
{% endblock %}
