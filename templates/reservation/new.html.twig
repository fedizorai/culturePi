 <link rel="stylesheet" href="{{ asset('assets/css/fontawesome.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/templatemo-woox-travel.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/owl.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/animate.css') }}">
        <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/>
</head>

<body>

    <header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- *** Logo Start *** -->
                    <a href="#" class="logo">
    <img src="{{ asset('assets/images/logo.png') }}" style="widht :100px ;height :55px;">
</a>
                    </a>
                    <!-- *** Logo End *** -->
                    <!-- *** Menu Start *** -->
                    {% block navbar %}
                        {% if app.user %}

  {% if app.user.access == 1 %}
                                <script>
                                    window.location.href = "{{ path('app_ban') }}";
                                </script>

                            {% endif %}
                           {% endif %}
                    
                    <ul class="nav">
                        <li><a href="#" class="active">Home</a></li>
                        <li><a href="{{ path('app_voyage_index') }}">Voyage</a></li>
                        <li><a href="{{ path('app_evenement_index') }}">Evenements</a></li>
                        <li><a href="#">Hebergement</a></li>
                        <li><a href="{{ path('app_testt') }}">Review</a></li>
                        {% if app.user %}
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" id="profileDropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ app.user.username }}</a>
            <ul class="dropdown-menu" id="profileMenu">
                <li><a href="{{ path('app_profile_show') }}"  style="color: black;">Profile</a></li>
                <li><a href="{{ path('app_logout') }}"  style="color: black;">Logout</a></li>
            </ul>
        </li>
    {% else %}
        <li><a href="{{ path('app_login') }}">Login</a></li>
    {% endif %}
</ul>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const profileDropdown = document.getElementById('profileDropdown');
        const profileMenu = document.getElementById('profileMenu');

        profileDropdown.addEventListener('mouseenter', function() {
            profileMenu.style.display = 'block';
        });

        profileMenu.addEventListener('mouseleave', function() {
            profileMenu.style.display = 'none';
        });
    });
</script>  

                    {% endblock %}
                    <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <!-- *** Menu End *** -->
                </nav>
            </div>
        </div>
    </div>
  </header>

<div class="second-page-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h4>Réservez votre offre préférée ici</h4>
                <h2>Faites votre réservation</h2>
                <p>Make Your Reservation, Make your reservation ,Make your reservation</p>
            </div>
        </div>
    </div>
</div>

<div class="more-info reservation-info">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-sm-6">
                <div class="info-item">
                    <i class="fa fa-phone"></i>
                    <h4>Passer un appel
                    </h4>
                    <a href="#">+216 58 818 677</a>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6">
                <div class="info-item">
                    <i class="fa fa-envelope"></i>
                    <h4>Nous contacter par courriel</h4>
                    <a href="#">CultureVibes@gmail.com</a>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6">
                <div class="info-item">
                    <i class="fa fa-map-marker"></i>
                    <h4>Visitez nos bureaux</h4>
                    <a href="#">2083 - Pôle Technologique - El Ghazala.</a>
                </div>
            </div>
        </div>
    </div>
<div class="container">
    <div class="row">
        <div class="col-lg-3 mx-auto mt-5 text-center">
            <a href="{{ path('app_reservation_showres') }}" class="btn btn-outline-success m-1">-> Reservations List</a>
        </div>
    </div>
</div>


</div>

<div class="reservation-form">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                {# Display flash messages #}
                {% for flash_message in app.session.flashBag.get('success') %}
                    <div class="alert alert-success">
                        {{ flash_message }}
                    </div>
                {% endfor %}

                <form id="reservation-form" method="post" action="{{ path('app_reservation_new') }}">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-lg-6">
                            <fieldset>
                                <label for="Name" class="form-label">Nombre de place</label>
                                {{ form_widget(form.nbrtickets, {'attr': {'class': 'Number'}}) }}
                                {{ form_errors(form.nbrtickets) }}
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label for="Name" class="form-label">Utilisateur</label>
                                {{ form_widget(form.iduser, {'attr': {'class': 'Number'}, 'value': app.user.id}) }}
                                {{ form_errors(form.iduser) }}
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label for="Name" class="form-label">Type de paiement</label>
                                {{ form_widget(form.paiement, {'attr': {'class': 'Name'}}) }}
                                {{ form_errors(form.paiement) }}
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label for="Name" class="form-label">Voyage</label>
                                {{ form_widget(form.Voyage, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.Voyage) }}
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </form>
            </div>
            
        </div>
    </div>
</div>

<!-- Scripts -->
